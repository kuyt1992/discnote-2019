<% if artists.any? %>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">
      <% artists.each do |artist| %>
        <div class="col-xs-6 col-md-3">
          <div class="card mb-4 shadow-sm">
            <%= image_tag artist.image.url, class: "card-img-top thumbnail" %>
            <div class="card-body">
              <h5 class="card-title"><%= artist.name %></h5>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'View', artist_path(artist) %></button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>  
    </div>
    
  </div>
</div>

<% end %>
<%= paginate artists %>