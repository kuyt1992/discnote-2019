<% if users.any? %>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row" >
      <% users.each do |user| %>
        <div class="col-md-3">
          <div class="card mb-4 shadow-sm">
           
            <div class="card-body">
              <div>
                <%= user.name %>
              </div>
              <div>
                <p><%= link_to 'View profile', user_path(user) %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= paginate users %>
<% end %>