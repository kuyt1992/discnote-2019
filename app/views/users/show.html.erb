<div class="row">
  <div class="media col-sm-12 mb-2">
    <div class="media-left">
      <%= image_tag @user.image.thumb100.url, class: "img-thumbnail" %>
    </div>
    <div class="media-body ml-4">
      <h3 class="media-heading"><%= @user.name %></h3>
      <p class="mt-0"><%= @user.introduce %></p>
    </div>
    <%= render 'relationships/follow_button', user: @user %>
    
  </div>
  
  <div class="col-sm-12">
    <ul class="nav nav-tabs nav-justified mt-5 mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>"><i class="fas fa-compact-disc"></i> Reviews <span class="badge badge-secondary"><%= @count_reviews %></span></a></li>
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">Followings  <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">Followers  <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
    </ul>
    <%= render 'reviews/reviews', reviews: @reviews %>
  </div>
</div>