<div class="jumbotron jumbotron-fluid jumbotron-user" style="background-image:url(<%= asset_path "user1.jpg" %>)">

<nav aria-label="breadcrumb">
  <ol class="breadcrumb breadcrumb-user">
	  <li class="breadcrumb-item"><a href="/">Top</a></li>
    <li class="breadcrumb-item"><i class="fas fa-users"></i> <a href=<%=users_path%>>Users</a></li>
    <li class="breadcrumb-item active" aria-current="page"><i class="fas fa-user"></i> <%= @user.name%>'s Reviews</li>
  </ol>
</nav>


  <div class="media col-sm-12 mb-2 mt-1 " >
    <div class="media-left">
      <%= image_tag @user.image.thumb100.url, class: "img-thumbnail" %>
    </div>
    <div class="media-body media-body-user ml-4">
      <h3 class="media-heading"><%= @user.name %></h3>
      <p class="mt-0"><%= @user.introduce %></p>
    </div>
    <%= render 'relationships/follow_button', user: @user %>
  </div>
</div>  

<div class="row">
  <div class="col-sm-12">
    <ul class="nav nav-tabs nav-justified mt-4 mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>"><i class="fas fa-compact-disc"></i> Reviews <span class="badge badge-secondary"><%= @count_reviews %></span></a></li>
      <li class="nav-item"><a href="<%= clips_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(clips_user_path(@user)) %>"><i class="fas fa-paperclip"></i> Clips <span class="badge badge-secondary"> <%= @count_clips %></span></a></li>
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>"><i class="fas fa-user-friends"></i> Followings  <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>"><i class="fas fa-user-friends"></i> Followers  <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
      <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>"><i class="fas fa-heart"></i> Likes <span class="badge badge-secondary"> <%= @count_favreviews %></span></a></li>
    </ul>
    <%= render 'reviews/reviews', reviews: @reviews %>
  </div>
</div>